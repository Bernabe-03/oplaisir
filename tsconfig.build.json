{
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*spec.ts",
    "**/*.e2e-spec.ts"
  ],
  "compilerOptions": {
    "incremental": false,
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "removeComments": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "inlineSources": false,
    "stripInternal": true
  }
}
