{
  "extends": "./tsconfig.json",
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "compilerOptions": {
    "incremental": true,
    "sourceMap": false,
    "declaration": false,
    "removeComments": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "inlineSources": false,
    "declarationMap": false,
    "stripInternal": true
  }
}